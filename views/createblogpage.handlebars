<form id="new-blog-form">
  <div class="form-group">
    <input id="blog-user" value={{user_id}} hidden />
    <div class="mb-2">
      <label for="blog-title" class="form-label">Blog title</label>
      <input
        type="text"
        class="form-control"
        id="blog-title"
      ></input>
    </div>
    <div class="mb-2">
      <label for="blog-content" class="form-label">Blog Description</label>
      <textarea
        type="text"
        class="form-control"
        id="blog-content"
        rows="10" 
      ></textarea>
    </div>
    <button
      type="submit"
      class="btn btn-sm btn-outline-info"
    >Create</button>
  </div>
</form>

<script src="/js/dashboard.js" />